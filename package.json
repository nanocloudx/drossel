{
  "name": "drossel",
  "description": "www.drossel.io",
  "version": "0.0.0",
  "author": "nanocloudx <nanocloudx@gmail.com>",
  "private": true,
  "scripts": {
    "start": "nf run node server/www",
    "deploy": "npm run lint && npm run build && npm run uglify",
    "lint": "eslint eslint --ext .js,.vue ./src",
    "build": "cross-env NODE_ENV=production webpack --progress --hide-modules",
    "uglify": "uglifyjs -c warnings=false -m -o ./server/public/index.js ./server/public/index.js",
    "dev": "cross-env NODE_ENV=development webpack --progress --watch & npm start",
    "db:migrate": "sequelize db:migrate:undo:all && sequelize db:migrate",
    "db:seed": "sequelize db:seed:undo:all && sequelize db:seed:all",
    "heroku-postbuild": "npm run deploy & npm run db:migrate"
  },
  "dependencies": {
    "body-parser": "~1.17.1",
    "compression": "^1.6.2",
    "connect-redis": "^3.2.0",
    "cookie-parser": "~1.4.3",
    "csurf": "^1.9.0",
    "debug": "~2.6.0",
    "drossel-rate-limit": "^1.0.1",
    "express": "~4.15.2",
    "express-session": "^1.15.1",
    "foreman": "^2.0.0",
    "helmet": "^3.4.1",
    "hjs": "~0.0.6",
    "ioredis": "^2.5.0",
    "morgan": "~1.8.1",
    "passport": "^0.3.2",
    "passport-twitter": "^1.0.4",
    "pg": "^6.1.2",
    "sequelize": "^3.30.2",
    "sequelize-cli": "^2.5.1",
    "serve-favicon": "~2.4.2",
    "socket.io": "^1.7.3"
  },
  "devDependencies": {
    "cross-env": "^3.0.0",
    "css-loader": "^0.28.0",
    "eslint": "^3.18.0",
    "eslint-plugin-html": "^2.0.1",
    "file-loader": "^0.10.1",
    "node-sass": "^4.5.0",
    "pre-commit": "^1.2.2",
    "sass-loader": "^6.0.3",
    "superagent": "^3.5.2",
    "uglify-js": "git://github.com/mishoo/UglifyJS2#harmony",
    "vue": "^2.2.1",
    "vue-loader": "^11.1.4",
    "vue-router": "^2.3.0",
    "vue-template-compiler": "^2.2.1",
    "webpack": "^2.2.0",
    "webpack-dev-server": "^2.2.0"
  },
  "pre-commit": [
    "deploy"
  ]
}
